@{
  Layout = "_Layout";
}

@model PierresTreats.Models.Treat;

<h2>Treat Details</h2>
<hr />
@* <h3>@Html.DisplayNameFor(model => model.TreatTitle): @Html.DisplayFor(model => model.TreatTitle)</h3>
  <h4>@Html.DisplayNameFor(model => model.Tagline): @Html.DisplayFor(model => model.Tagline)</h4> *@

@if (@Model.JoinEntities.Count == 0)
{
  <p>There is not an flavor currently assigned to this treat.</p>
}
else
{
  <h4>Written by:</h4>
  <ul class="TreatFineDetails">
  @foreach (var join in Model.JoinEntities)
    {
      <li>@join.Flavor.FlavorName</li>
    }

  </ul>
}
<hr>
<div class="row">
  <div class="col-md-4"><a href='@Url.Action("AddFlavor", "Treats")' role="button" class="btn btn-dark">Connect Treat
      To
      Flavor</a>
  </div>
  <div class="col-md-4"><a href='@Url.Action("Edit", "Treats", new { id = Model.TreatId })' role="button"
      class="btn btn-dark">Edit Treat</a>
  </div>
  <div class="col-md-4"><a href='@Url.Action("Delete","Treats", new { id = Model.TreatId })' role="button"
      class="btn btn-dark">Delete Treat</a>
  </div>
</div>
<hr>
<div class="row">
  <div class="col-md-4"><a href='@Url.Action("Index", "Treats")' role="button" class="btn btn-dark">View All
      Treats</a>
  </div>
  <div class="col-md-4"><a href='@Url.Action("Index", "Flavors")' role="button" class="btn btn-dark">View All
      Flavors</a>
  </div>
  <div class="col-md-4"><a href='@Url.Action("Index","Home")' role="button" class="btn btn-dark">Back To
      Homepage</a>
  </div>
</div>