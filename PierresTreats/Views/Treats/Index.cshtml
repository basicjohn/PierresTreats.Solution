@{
  Layout = "_Layout";
}

@using PierresTreats.Models;

<h1>Treats</h1>

@* @if (@Model.Count == 0)
  {
  <h3>No treats have been added yet!</h3>
  } *@

<ul>
  @foreach (var treat in ViewBag.Treat)
  {
    <li>@Html.ActionLink($"{treat.TreatName}", "Details", new { id = treat.TreatId })</li>
  }
</ul>
<hr>
<div class="row">
  <div class="col-md-4"><a href='@Url.Action("Create", "Treats")' role="button" class="btn btn-dark">Add New Treat</a>
  </div>
  <div class="col-md-4"><a href='@Url.Action("Index", "Flavors")' role="button" class="btn btn-dark">View All
      Flavors</a>
  </div>
  <div class="col-md-4"><a href='@Url.Action("Index","Home")' role="button" class="btn btn-dark">Back To
      Homepage</a>
  </div>
</div>