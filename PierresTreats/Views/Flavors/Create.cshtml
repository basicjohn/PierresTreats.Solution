<div class="offset-md-3 col-md-6">
  @{
    Layout = "_Layout";
  }

  @model PierresTreats.Models.Flavor
  <h4>Add a new Flavor</h4>

  @using (Html.BeginForm())
  {
    @Html.TextBoxFor(model => model.FlavorName, new { @class = "form-control", placeholder =
  @Html.DisplayNameFor(m=>m.FlavorName), required="required"})

    <input type="submit" value="Create" class="btn btn-primary" />
  }
</div>
<hr>
<div class="row">
  <div class="col-md-4"><a href='@Url.Action("Index", "Treats")' role="button" class="btn btn-dark">View All
      Treats</a>
  </div>
  <div class="col-md-4"><a href='@Url.Action("Index", "Flavors")' role="button" class="btn btn-dark">View All
      Flavors</a>
  </div>
  <div class="col-md-4"><a href='@Url.Action("Index","Home")' role="button" class="btn btn-dark">Back To
      Homepage</a>
  </div>
</div>