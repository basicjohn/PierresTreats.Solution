@{
  Layout = "_Layout";
}

@model PierresTreats.Models.Flavor

<h2>Add Treat</h2>

<h4>Add Treats to this Flavor:

  @using (Html.BeginForm())
  {
    @Html.HiddenFor(model => model.FlavorId)

    @Html.Label("Select Treat: ")
    @Html.DropDownList("TreatId")

    <input type="submit" value="Save" class="btn btn-primary" />
  }

  <hr>
  <div class="row">
    <div class="col-md-4"><a href='@Url.Action("Index", "Flavors")' role="button" class="btn btn-dark">Back to Flavor
        List</a>
    </div>
  </div>